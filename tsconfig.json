{
  "compilerOptions": {
    "target": "ES6",
    "module": "ES2022",
    "moduleResolution": "node",
    "lib": ["DOM", "ESNext"],
    "jsx": "react-jsx",

    "composite": false,
    "strict": false,
    "strictNullChecks": false,
    "noImplicitAny": false,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,

    "allowJs": true,
    "checkJs": false,

    "baseUrl": ".",
    "outDir": "./dist",
    "paths": {
      "~/*": ["src/*"]
    }
  },
  "files": [],
  "references": [{ "path": "./tsconfig.app.json" }, { "path": "./tsconfig.node.json" }]
}
